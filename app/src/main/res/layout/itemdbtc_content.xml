<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/shapebgcon2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_dbtc_content_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#111111"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#222222" />

    <TextView
        android:id="@+id/tv_dbtc_content_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"

        android:textColor="#111111"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#222222" />

    <TextView
        android:id="@+id/tv_dbtc_content_pfbz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:textColor="#111111"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#222222" />

    <TextView
        android:id="@+id/tv_dbtc_content_jcyq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:textColor="#111111"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#222222" />

    <ImageView
        android:id="@+id/iv_dbtc_content_y"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/checked" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#222222" />

    <ImageView
        android:id="@+id/iv_dbtc_content_n"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/checked" />

</LinearLayout>